---
/**
 * About Page (English)
 */
import Layout from '../../layouts/Layout.astro';
import { profile } from '../../data/profile';
import { useTranslations } from '../../i18n';

const lang = 'en';
const t = useTranslations(lang);

// Helper function to format date
function formatDate(dateStr: string, showPresent = false) {
  if (!dateStr && showPresent) return t.about.present;
  const date = new Date(dateStr + '-01');
  return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short' });
}
---

<Layout title={`${t.about.title} | ${t.site.title}`} description={t.about.description}>
  <section class="section about-page">
    <div class="container">
      <!-- Page Header -->
      <div class="page-header">
        <h1>{t.about.title}</h1>
        <p>{t.about.description}</p>
      </div>

      <div class="about-content">
        <!-- Bio Section -->
        <section class="about-section">
          <h2 class="section-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            {t.about.sections.bio}
          </h2>
          <div class="bio-card card">
            <div class="bio-header">
              <div class="bio-avatar">
                <span class="avatar-placeholder">{profile.name.split(' ').map(n => n[0]).join('')}</span>
              </div>
              <div class="bio-info">
                <h3>{profile.name}</h3>
                <p class="bio-title">{profile.title[lang]}</p>
                <p class="bio-location">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                    <circle cx="12" cy="10" r="3"></circle>
                  </svg>
                  {profile.location}
                </p>
              </div>
            </div>
            <p class="bio-text">{profile.bio[lang]}</p>
            <div class="bio-actions no-print">
              <button onclick="window.print()" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="6 9 6 2 18 2 18 9"></polyline>
                  <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                  <rect x="6" y="14" width="12" height="8"></rect>
                </svg>
                {t.about.printResume}
              </button>
            </div>
          </div>
        </section>

        <!-- Work Experience -->
        <section class="about-section">
          <h2 class="section-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
              <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
            </svg>
            {t.about.sections.experience}
          </h2>
          <div class="timeline">
            {profile.experience.map((exp, index) => (
              <div class="timeline-item">
                <div class="timeline-marker"></div>
                <div class="timeline-content card">
                  <div class="timeline-header">
                    <div>
                      <h3>{exp.position[lang]}</h3>
                      <p class="company">{exp.company} • {exp.location}</p>
                    </div>
                    <span class="date">
                      {formatDate(exp.startDate)} - {exp.endDate ? formatDate(exp.endDate) : t.about.present}
                    </span>
                  </div>
                  <ul class="responsibilities">
                    {exp.description[lang].map(item => (
                      <li>{item}</li>
                    ))}
                  </ul>
                  {exp.technologies && (
                    <div class="tech-stack">
                      {exp.technologies.map(tech => (
                        <span class="tag">{tech}</span>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            ))}
          </div>
        </section>

        <!-- Certifications -->
        <section class="about-section">
          <h2 class="section-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="8" r="7"></circle>
              <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
            </svg>
            {t.about.sections.certifications}
          </h2>
          <div class="certs-grid">
            {profile.certifications.map(cert => (
              <div class="cert-card card">
                <div class="cert-badge">
                  <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                  </svg>
                </div>
                <div class="cert-info">
                  <h3>{cert.name}</h3>
                  <p class="cert-issuer">{cert.issuer}</p>
                  <p class="cert-date">
                    Issued: {formatDate(cert.issueDate)}
                    {cert.expiryDate && ` • Expires: ${formatDate(cert.expiryDate)}`}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </section>

        <!-- Speaking -->
        <section class="about-section">
          <h2 class="section-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
            </svg>
            {t.about.sections.speaking}
          </h2>
          <div class="speaking-list">
            {profile.speaking.map(talk => (
              <div class="speaking-card card">
                <div class="speaking-content">
                  <h3>{talk.title[lang]}</h3>
                  <p class="speaking-event">{talk.event}</p>
                  <p class="speaking-meta">
                    <span>
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                      </svg>
                      {new Date(talk.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                    </span>
                    <span>
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                      </svg>
                      {talk.location}
                    </span>
                  </p>
                  {talk.description && (
                    <p class="speaking-desc">{talk.description[lang]}</p>
                  )}
                </div>
                <div class="speaking-links no-print">
                  {talk.slidesUrl && (
                    <a href={talk.slidesUrl} target="_blank" rel="noopener noreferrer" class="btn btn-outline btn-sm">
                      Slides
                    </a>
                  )}
                  {talk.videoUrl && (
                    <a href={talk.videoUrl} target="_blank" rel="noopener noreferrer" class="btn btn-outline btn-sm">
                      Video
                    </a>
                  )}
                </div>
              </div>
            ))}
          </div>
        </section>

        <!-- Skills -->
        <section class="about-section">
          <h2 class="section-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="16 18 22 12 16 6"></polyline>
              <polyline points="8 6 2 12 8 18"></polyline>
            </svg>
            {t.about.sections.skills}
          </h2>
          <div class="skills-grid">
            {profile.skills.map(category => (
              <div class="skill-category card">
                <h3>{category.name[lang]}</h3>
                <div class="skill-tags">
                  {category.skills.map(skill => (
                    <span class="tag">{skill}</span>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </section>

        <!-- Education -->
        <section class="about-section">
          <h2 class="section-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 10v6M2 10l10-5 10 5-10 5z"></path>
              <path d="M6 12v5c3 3 9 3 12 0v-5"></path>
            </svg>
            {t.about.sections.education}
          </h2>
          <div class="education-list">
            {profile.education.map(edu => (
              <div class="education-card card">
                <div class="edu-header">
                  <div>
                    <h3>{edu.school}</h3>
                    <p class="edu-degree">{edu.degree[lang]} in {edu.field[lang]}</p>
                  </div>
                  <span class="date">
                    {formatDate(edu.startDate)} - {edu.endDate ? formatDate(edu.endDate) : t.about.present}
                  </span>
                </div>
                {edu.achievements && (
                  <ul class="edu-achievements">
                    {edu.achievements[lang].map(item => (
                      <li>{item}</li>
                    ))}
                  </ul>
                )}
              </div>
            ))}
          </div>
        </section>

        <!-- Social Links -->
        <section class="about-section">
          <h2 class="section-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
              <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
            </svg>
            {t.about.sections.social}
          </h2>
          <div class="social-grid no-print">
            {profile.social.github && (
              <a href={profile.social.github} target="_blank" rel="noopener noreferrer" class="social-card card">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                <span>GitHub</span>
              </a>
            )}
            {profile.social.linkedin && (
              <a href={profile.social.linkedin} target="_blank" rel="noopener noreferrer" class="social-card card">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
                <span>LinkedIn</span>
              </a>
            )}
            {profile.social.twitter && (
              <a href={profile.social.twitter} target="_blank" rel="noopener noreferrer" class="social-card card">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                <span>Twitter/X</span>
              </a>
            )}
            {profile.social.youtube && (
              <a href={profile.social.youtube} target="_blank" rel="noopener noreferrer" class="social-card card">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
                </svg>
                <span>YouTube</span>
              </a>
            )}
            {profile.social.email && (
              <a href={`mailto:${profile.social.email}`} class="social-card card">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
                <span>Email</span>
              </a>
            )}
          </div>
        </section>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .page-header p {
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .about-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .about-section {
    margin-bottom: 3rem;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--color-border);
  }

  .section-title svg {
    color: var(--color-accent);
  }

  /* Bio Card */
  .bio-card {
    padding: 2rem;
  }

  .bio-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .bio-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-primary-400), var(--color-primary-600));
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .avatar-placeholder {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
  }

  .bio-info h3 {
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
  }

  .bio-title {
    color: var(--color-accent);
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .bio-location {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-tertiary);
    font-size: 0.875rem;
  }

  .bio-text {
    color: var(--color-text-secondary);
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .bio-actions {
    display: flex;
    gap: 1rem;
  }

  /* Timeline */
  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0.5rem;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: var(--color-border);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .timeline-marker {
    position: absolute;
    left: -1.5rem;
    top: 1.5rem;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: var(--color-accent);
    border: 2px solid var(--color-bg);
  }

  .timeline-content {
    padding: 1.5rem;
  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .timeline-header h3 {
    font-size: 1.125rem;
    margin-bottom: 0.25rem;
  }

  .company {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .date {
    color: var(--color-text-tertiary);
    font-size: 0.875rem;
    white-space: nowrap;
  }

  .responsibilities {
    list-style: disc;
    margin-left: 1.25rem;
    margin-bottom: 1rem;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .responsibilities li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  /* Certifications Grid */
  .certs-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .cert-card {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem;
  }

  .cert-badge {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary-100), var(--color-primary-200));
    border-radius: 0.5rem;
    color: var(--color-accent);
  }

  [data-theme="dark"] .cert-badge {
    background: linear-gradient(135deg, var(--color-primary-900), var(--color-primary-800));
  }

  .cert-info h3 {
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
  }

  .cert-issuer {
    color: var(--color-text-secondary);
    font-size: 0.75rem;
    margin-bottom: 0.25rem;
  }

  .cert-date {
    color: var(--color-text-tertiary);
    font-size: 0.75rem;
  }

  /* Speaking */
  .speaking-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .speaking-card {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem;
  }

  .speaking-content h3 {
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }

  .speaking-event {
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .speaking-meta {
    display: flex;
    gap: 1rem;
    color: var(--color-text-tertiary);
    font-size: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .speaking-meta span {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .speaking-desc {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .speaking-links {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .btn-sm {
    padding: 0.375rem 0.75rem;
    font-size: 0.75rem;
  }

  /* Skills Grid */
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .skill-category {
    padding: 1.25rem;
  }

  .skill-category h3 {
    font-size: 1rem;
    margin-bottom: 0.75rem;
    color: var(--color-accent);
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  /* Education */
  .education-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .education-card {
    padding: 1.25rem;
  }

  .edu-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .edu-header h3 {
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }

  .edu-degree {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .edu-achievements {
    list-style: disc;
    margin-left: 1.25rem;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .edu-achievements li {
    margin-bottom: 0.25rem;
  }

  /* Social Grid */
  .social-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
  }

  .social-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.2s ease;
  }

