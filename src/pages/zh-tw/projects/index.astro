---
/**
 * Projects Page (Traditional Chinese)
 */
import Layout from '../../../layouts/Layout.astro';
import { useTranslations, getTranslatedPath } from '../../../i18n';

const lang = 'zh-tw';
const t = useTranslations(lang);

// Mock projects data
const projects = [
  {
    slug: 'vuln-scanner',
    title: 'VulnScanner',
    description: '自動化 Web 應用程式弱點掃描工具，支援 OWASP Top 10 偵測與自訂規則定義。',
    image: '/projects/vuln-scanner.png',
    technologies: ['Python', 'FastAPI', 'Redis', 'Docker'],
    github: 'https://github.com/alexchen/vuln-scanner',
    demo: 'https://vuln-scanner.example.com',
    featured: true,
  },
  {
    slug: 'secret-detector',
    title: 'SecretDetector',
    description: 'Pre-commit hook 與 CI 工具，防止金鑰、API Key 與憑證被提交到程式碼庫。',
    image: '/projects/secret-detector.png',
    technologies: ['Go', 'GitHub Actions', 'GitLab CI'],
    github: 'https://github.com/alexchen/secret-detector',
    featured: true,
  },
  {
    slug: 'k8s-audit',
    title: 'K8s-Audit',
    description: 'Kubernetes 安全稽核工具，根據 CIS 基準與自訂安全政策檢查叢集配置。',
    image: '/projects/k8s-audit.png',
    technologies: ['Go', 'Kubernetes', 'OPA', 'Helm'],
    github: 'https://github.com/alexchen/k8s-audit',
    featured: true,
  },
  {
    slug: 'phishing-detector',
    title: 'PhishGuard',
    description: '基於機器學習的釣魚偵測系統，提供電子郵件與 URL 分析的即時保護。',
    image: '/projects/phish-guard.png',
    technologies: ['Python', 'TensorFlow', 'Flask', 'PostgreSQL'],
    github: 'https://github.com/alexchen/phish-guard',
    featured: false,
  },
];
---

<Layout title={`${t.projects.title} | ${t.site.title}`} description={t.projects.description}>
  <section class="section">
    <div class="container">
      <!-- Page Header -->
      <div class="page-header">
        <h1>{t.projects.title}</h1>
        <p>{t.projects.description}</p>
      </div>

      <!-- Projects Grid -->
      <div class="projects-grid">
        {projects.map(project => (
          <article class="project-card" class:list={{ featured: project.featured }}>
            <div class="project-image">
              <div class="placeholder-image">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
              </div>
            </div>
            <div class="project-content">
              <h2>{project.title}</h2>
              <p>{project.description}</p>
              <div class="project-tech">
                <span class="tech-label">{t.projects.technologies}:</span>
                <div class="tech-list">
                  {project.technologies.map(tech => (
                    <span class="tag">{tech}</span>
                  ))}
                </div>
              </div>
              <div class="project-links">
                {project.github && (
                  <a href={project.github} target="_blank" rel="noopener noreferrer" class="btn btn-outline">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    {t.projects.sourceCode}
                  </a>
                )}
                {project.demo && (
                  <a href={project.demo} target="_blank" rel="noopener noreferrer" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                      <polyline points="15 3 21 3 21 9"></polyline>
                      <line x1="10" y1="14" x2="21" y2="3"></line>
                    </svg>
                    {t.projects.liveDemo}
                  </a>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .page-header p {
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    background-color: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px -10px var(--color-card-shadow);
    border-color: var(--color-border-hover);
  }

  .project-card.featured {
    border-color: var(--color-accent);
  }

  .project-image {
    aspect-ratio: 16/9;
    background-color: var(--color-bg-tertiary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-image {
    color: var(--color-text-tertiary);
    opacity: 0.5;
  }

  .project-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .project-content h2 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .project-content > p {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    line-height: 1.6;
    margin-bottom: 1rem;
    flex: 1;
  }

  .project-tech {
    margin-bottom: 1rem;
  }

  .tech-label {
    font-size: 0.75rem;
    color: var(--color-text-tertiary);
    display: block;
    margin-bottom: 0.5rem;
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .project-links {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .project-links .btn {
    flex: 1;
    min-width: 120px;
    font-size: 0.875rem;
    padding: 0.5rem 1rem;
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
